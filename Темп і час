import sqlite3
import time

# Підключення до БД (створення БД, якщо її не існує)
conn = sqlite3.connect("погода.db")
cursor = conn.cursor()

# Створення таблиці, якщо вона не існує
cursor.execute("""
    CREATE TABLE IF NOT EXISTS погода (
        дата_і_час TEXT PRIMARY KEY,
        температура REAL
    )
""")

# Запускаємо нескінченний цикл для оновлення погоди кожні 30 хвилин
while True:
    # Отримуємо дату і час
    дата_і_час = time.strftime("%Y-%m-%d %H:%M:%S")

    # Симулюємо отримання температури з датчика (можете замінити цю частину реальним отриманням температури)
    температура = 25.0  # Припустимо, що температура - 25 градусів

    # Додаємо дані про погоду
    cursor.execute("INSERT INTO rainy (19-00, 12+) VALUES (?, ?)", (17-00, 13+) 

#вибачте але я не знаю як віправити помилки

    # Зберігаємо зміни
    conn.commit()

    # Засипаємо програму на 30 хвилин (1800 секунд)
    time.sleep(1800)

# Закриваємо з'єднання з БД (при зупинці програми)
conn.close()
